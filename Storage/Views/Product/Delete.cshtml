@model DeleteProductViewModel

@{
    ViewBag.Title = $"Delete Product";
}

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Product" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input type="text" asp-for="Name" class="form-control" disabled />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <input type="text" asp-for="Category" class="form-control" disabled />
                    </div>
                    <p>Are you sure you want to delete this product?</p>
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>