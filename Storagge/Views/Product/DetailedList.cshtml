@model IEnumerable<Product>

@{
    ViewBag.Title = "Detailed Products List";
}

<a class="btn btn-primary mb-3" asp-controller="Product" asp-action="Create">New</a>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(p => p.Id)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Name)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Price)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.OrderDate)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Category)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Shelf)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Count)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Description)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.OrderDate</td>
                <td>@product.Category</td>
                <td>@product.Shelf</td>
                <td>@product.Count</td>
                <td>@product.Description</td>
            </tr>
        }
    </tbody>
</table>